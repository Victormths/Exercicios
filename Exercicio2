public class Exercicio2 {
    public static void main(String[] args) {
     int idade = 26;
        boolean maiorIdade = idade >= 18;
        
        if (maiorIdade){ System.out.println("Você é maior de idade");}
        else { System.out.println("Você é menor de idade");}
        
        if (idade < 16){ System.out.println ("Você não pode votar");}
        else if ((idade >= 16 && idade < 18) || idade >70){ System.out.println("Seu voto é facultativo");}
        else { System.out.println("Seu voto é obrigatório");}    
  }
}
